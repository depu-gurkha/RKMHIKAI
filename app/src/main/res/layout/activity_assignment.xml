<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/rounded_button"
        android:text="Upload"
        app:backgroundTint="#47b2e4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toEndOf="@+id/btnDownload"
        app:layout_constraintTop_toBottomOf="@+id/txtParticipantClass" />

    <Button
        android:id="@+id/btn_dwnld"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="172dp"
        android:background="@drawable/rounded_button"
        android:text="Downlaod"
        app:backgroundTint="#47b2e4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtParticipantClass" />

    <TextView
        android:id="@+id/txtParticipantClass"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginTop="50dp"
        android:text="Upload Assignment "
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pb_assignment"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="336dp"
        android:layout_height="36dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="256dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDownload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.243"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtParticipantClass"
        app:layout_constraintVertical_bias="0.105" />
</androidx.constraintlayout.widget.ConstraintLayout>